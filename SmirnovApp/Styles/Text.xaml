<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="FormLabel" TargetType="Label">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#263238"/>
    </Style>

    <Style x:Key="HeadingBase">
        <Setter Property="TextElement.FontWeight" Value="Regular"/>
        <Setter Property="FrameworkElement.Margin" Value="0 10"/>
    </Style>

    <Style x:Key="Heading1" BasedOn="{StaticResource HeadingBase}">
        <Setter Property="TextElement.FontSize" Value="42"/>
    </Style>

    <Style x:Key="Heading2" BasedOn="{StaticResource HeadingBase}">
        <Setter Property="TextElement.FontSize" Value="32"/>
    </Style>

    <Style x:Key="Heading3" BasedOn="{StaticResource HeadingBase}">
        <Setter Property="TextElement.FontSize" Value="24"/>
    </Style>

    <Style x:Key="Heading4" BasedOn="{StaticResource HeadingBase}">
        <Setter Property="TextElement.FontSize" Value="20"/>
    </Style>

    <Style x:Key="Heading5" BasedOn="{StaticResource HeadingBase}">
        <Setter Property="TextElement.FontSize" Value="18"/>
    </Style>

    <Style x:Key="Heading6" BasedOn="{StaticResource HeadingBase}">
        <Setter Property="TextElement.FontSize" Value="16"/>
    </Style>
</ResourceDictionary>